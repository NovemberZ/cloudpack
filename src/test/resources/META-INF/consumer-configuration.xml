<?xml version="1.0"?>
<configuration>
	<property>
		<name>com.alibaba.hbase.replication.producer.fs</name>
		<value>hdfs://havana01:9000/replication/</value>
		<description>同步生产端的filesystem位置</description>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.tmpfile.targetPath</name>
		<value>todo/</value>
		<description>待处理的中间文件存放位置</description>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.tmpfile.oldPath</name>
		<value>old/</value>
		<description>已处理的中间文件存放位置</description>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.tmpfile.rejectPath</name>
		<value>reject/</value>
		<description>退回的中间文件存放位置（需要producer端重做）</description>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.tmpfile.tmpPath</name>
		<value>tmp/</value>
		<description>tmp文件存放位置</description>
	</property>
	<property>
		<name>hbase.zookeeper.quorum</name>
		<value>havana01</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.zookeeper.znoderoot</name>
		<value>/consumer</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.fileChannelPoolSize</name>
		<value>10</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.dataLoadingPoolSize</name>
		<value>30</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.dataLoadingBatchSize</name>
		<value>500</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.threadpool.queuesize</name>
		<value>100</value>
	</property>
	<property>
		<name>com.alibaba.hbase.replication.consumer.threadpool.keepAliveTime</name>
		<value>100</value>
	</property>
</configuration>